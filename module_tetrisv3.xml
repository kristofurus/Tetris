<?xml version="1.0" encoding="UTF-8"?>
<project name="module_tetrisv3" default="compile.module.tetrisv3">
  <dirname property="module.tetrisv3.basedir" file="${ant.file.module_tetrisv3}"/>
  
  <property name="module.jdk.home.tetrisv3" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.tetrisv3" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.tetrisv3" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.tetrisv3" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="tetrisv3.output.dir" value="${module.tetrisv3.basedir}/out/production/TetrisV3"/>
  <property name="tetrisv3.testoutput.dir" value="${module.tetrisv3.basedir}/out/test/TetrisV3"/>
  
  <path id="tetrisv3.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="tetrisv3.module.production.classpath">
    <path refid="${module.jdk.classpath.tetrisv3}"/>
    <pathelement location="${path.variable.maven_repository}/org/jetbrains/annotations/17.0.0/annotations-17.0.0.jar"/>
  </path>
  
  <path id="tetrisv3.runtime.production.module.classpath">
    <pathelement location="${tetrisv3.output.dir}"/>
    <pathelement location="${path.variable.maven_repository}/org/jetbrains/annotations/17.0.0/annotations-17.0.0.jar"/>
  </path>
  
  <path id="tetrisv3.module.classpath">
    <path refid="${module.jdk.classpath.tetrisv3}"/>
    <pathelement location="${tetrisv3.output.dir}"/>
    <pathelement location="${path.variable.maven_repository}/org/jetbrains/annotations/17.0.0/annotations-17.0.0.jar"/>
  </path>
  
  <path id="tetrisv3.runtime.module.classpath">
    <pathelement location="${tetrisv3.testoutput.dir}"/>
    <pathelement location="${tetrisv3.output.dir}"/>
    <pathelement location="${path.variable.maven_repository}/org/jetbrains/annotations/17.0.0/annotations-17.0.0.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.tetrisv3">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tetrisv3">
    <patternset refid="excluded.from.module.tetrisv3"/>
  </patternset>
  
  <path id="tetrisv3.module.sourcepath">
    <dirset dir="${module.tetrisv3.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tetrisv3" depends="compile.module.tetrisv3.production,compile.module.tetrisv3.tests" description="Compile module TetrisV3"/>
  
  <target name="compile.module.tetrisv3.production" depends="register.custom.compilers" description="Compile module TetrisV3; production classes">
    <mkdir dir="${tetrisv3.output.dir}"/>
    <javac2 destdir="${tetrisv3.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tetrisv3}/javac">
      <compilerarg line="${compiler.args.tetrisv3}"/>
      <bootclasspath refid="tetrisv3.module.bootclasspath"/>
      <classpath refid="tetrisv3.module.production.classpath"/>
      <src refid="tetrisv3.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tetrisv3"/>
    </javac2>
    
    <copy todir="${tetrisv3.output.dir}">
      <fileset dir="${module.tetrisv3.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tetrisv3.tests" depends="register.custom.compilers,compile.module.tetrisv3.production" description="compile module TetrisV3; test classes" unless="skip.tests"/>
  
  <target name="clean.module.tetrisv3" description="cleanup module">
    <delete dir="${tetrisv3.output.dir}"/>
    <delete dir="${tetrisv3.testoutput.dir}"/>
  </target>
</project>