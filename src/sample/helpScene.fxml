<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<FlowPane fx:controller="sample.HelpScene" xmlns:fx="http://javafx.com/fxml" orientation="VERTICAL"
          alignment="CENTER" vgap="10" prefHeight="275.0" prefWidth="300.0">
    <Text text="w/up - rotate" textAlignment="CENTER"/>
    <Text text="a/left - move left" textAlignment="CENTER"/>
    <Text text="d/right - move right" textAlignment="CENTER"/>
    <Text text="s/down - move down" textAlignment="CENTER"/>
    <Button fx:id="returnButton" text="Return" prefWidth="100" onAction="#handleReturnButton"/>
</FlowPane>
