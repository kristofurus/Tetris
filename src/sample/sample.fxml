<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>

<FlowPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" orientation="VERTICAL"
          alignment="CENTER" vgap="10" prefHeight="275.0" prefWidth="300.0">
    <Button fx:id="playButton" text="Play" prefWidth="100" onAction="#handlePlayButton"/>
    <Button fx:id="highScoreButton" text="HighScore" prefWidth="100" onAction="#handleHighScoreButton"/>
    <Button fx:id="settingButton" text="Settings" prefWidth="100" onAction="#handleSettingButton"/>
    <Button fx:id="helpButton" text="Help" prefWidth="100" onAction="#handleHelpButton"/>
    <Button fx:id="exitButton" text="Exit" prefWidth="100" onAction="#handleExitButton"/>
</FlowPane>